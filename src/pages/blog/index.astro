---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="w-full max-w-[960px] mx-auto p-4">
      <section>
        <ul class="flex flex-wrap gap-8 list-none m-0 p-0">
          {
            posts.map((post) => (
              <li class="w-[calc(50%-1rem)] transition-transform duration-200 ease-in-out hover:-translate-y-0.5">
                <a
                  href={`/blog/${post.id}/`}
                  class="block no-underline p-6 bg-gray-light/10 rounded-xl backdrop-blur-md border border-gray/10 shadow-md transition duration-300 hover:bg-gray-light/20 hover:border-gray/20"
                >
                  {post.data.heroImage && (
                    <img
                      class="w-full h-[200px] object-cover rounded-lg mb-4"
                      src={post.data.heroImage}
                      alt=""
                    />
                  )}
                  <h4 class="m-0 text-text-main leading-tight text-2xl">
                    {post.data.title}
                  </h4>
                  <p class="m-0 text-gray">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  {post.data.description && (
                    <p class="mt-2 mb-0 text-text-secondary">
                      {post.data.description}
                    </p>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
