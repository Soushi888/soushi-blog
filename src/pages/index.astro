---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>Welcome to {SITE_TITLE}</h1>
      <p class="intro">
        Exploring the future of peer-to-peer economies, distributed systems, and
        new economic paradigms. Join me on this journey of understanding and
        building the next generation of economic systems.
      </p>

      <section class="features">
        <h2>What You'll Find Here</h2>
        <div class="feature-grid">
          <div class="feature-card">
            <h3>ðŸŽ¯ Focus Areas</h3>
            <ul>
              <li>P2P Economy Fundamentals</li>
              <li>New Economic Paradigms</li>
              <li>Technical Deep Dives</li>
              <li>Practical Applications</li>
            </ul>
          </div>
          <div class="feature-card">
            <h3>ðŸ“š Content Types</h3>
            <ul>
              <li>In-depth Articles</li>
              <li>Technical Tutorials</li>
              <li>Case Studies</li>
              <li>Series & Guides</li>
            </ul>
          </div>
          <div class="feature-card">
            <h3>ðŸŒŸ Special Features</h3>
            <ul>
              <li>Newsletter Integration</li>
              <li>Series Management</li>
              <li>Code Highlighting</li>
              <li>Dark/Light Mode</li>
            </ul>
          </div>
        </div>
      </section>

      <section class="cta">
        <h2>Stay Connected</h2>
        <p>
          Subscribe to my newsletter to receive the latest insights, tutorials,
          and updates about P2P economies and distributed systems.
        </p>
        <a href="/blog" class="button">Read the Blog</a>
      </section>
    </main>
    <Footer />
    <style>
      main {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: 0 auto;
        padding: 3em 1em;
      }
      .intro {
        font-size: 1.2em;
        line-height: 1.6;
        margin: 1em 0 2em;
      }
      .features {
        margin: 4em 0;
      }
      .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2em;
        margin-top: 2em;
      }
      .feature-card {
        background: var(--gray-gradient);
        padding: 1.5em;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
      }
      .feature-card h3 {
        margin: 0 0 1em;
        font-size: 1.25em;
      }
      .feature-card ul {
        margin: 0;
        padding: 0 0 0 1.5em;
      }
      .feature-card li {
        margin: 0.5em 0;
      }
      .cta {
        text-align: center;
        margin: 4em 0;
      }
      .button {
        display: inline-block;
        padding: 1em 2em;
        background-color: var(--accent);
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.2s;
      }
      .button:hover {
        background-color: var(--accent-dark);
      }
      h1 {
        font-size: 2.5em;
        margin: 0;
      }
      h2 {
        font-size: 2em;
        margin: 0 0 1em;
      }
    </style>
  </body>
</html>
