---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  className?: string;
  variant?: "primary" | "secondary" | "outline";
}

const {
  href,
  type = "button",
  className = "",
  variant = "primary",
} = Astro.props;

const baseStyles =
  "inline-block px-8 py-4 font-bold rounded-md transition-colors duration-200";
const variants = {
  primary: "bg-primary hover:bg-primary-dark text-white",
  secondary: "bg-gray hover:bg-gray-dark text-white",
  outline:
    "border-2 border-primary text-primary hover:bg-primary hover:text-white",
};
---

{
  href ? (
    <a href={href} class:list={[baseStyles, variants[variant], className]}>
      <slot />
    </a>
  ) : (
    <button type={type} class:list={[baseStyles, variants[variant], className]}>
      <slot />
    </button>
  )
}
